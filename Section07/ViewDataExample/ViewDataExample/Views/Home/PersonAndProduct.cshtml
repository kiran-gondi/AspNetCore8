@model PersonAndProductWrapperModel

<!DOCTYPE html>
<html>
    <head>
        <title>Person and Product</title>
        <meta charset="utf-8" />
        <link href="~/StyleSheet.css" rel="stylesheet" />
    </head>

    <body>
        <div class="page-content">
            <div class="box w-100">
                <h3>Person</h3>
                <table class="table w-50">
                    <tbody>
                        <tr>
                            <td>Person Name</td>
                            <td>@Model.PersonData.Name</td>
                        </tr>
                    <tr>
                        <td>DOB</td>
                        <td>@Model.PersonData.DateOfBirth?.ToString("mm/dd/yyyy")</td>
                    </tr>
                    <tr>
                        <td>Gender</td>
                        <td>@Model.PersonData.PersonGender</td>
                    </tr>
                    </tbody>
                </table>
            </div>

            <div class="box w-100">
                <h3>Product</h3>
            <table class="table w-50">
                <tbody>
                    <tr>
                        <td>Product Name</td>
                        <td>@Model.ProductData.ProductName</td>
                    </tr>
                    <tr>
                        <td>Product Id</td>
                        <td>@Model.ProductData.ProductId</td>
                    </tr>
                </tbody>
            </table>
            </div>

        </div>
    </body>
</html>